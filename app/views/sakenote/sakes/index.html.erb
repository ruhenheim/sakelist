<p id="notice"><%= notice %></p>

<h1>Sakenote Sakes</h1>

<%= search_form_for @q do |f| %>
  <%= f.label :sake_name_or_sake_furigana_or_sake_alphabet_cont, '銘柄名' %>
  <%= f.search_field :sake_name_or_sake_furigana_or_sake_alphabet_cont %>

  <%= f.label :maker_name_cont, '製造元' %>
  <%= f.search_field :maker_name_cont %>

  <%= f.submit %>
<% end %>

<table bgcolor="aqua" border="1">
  <thead>
    <tr>
      <th>酒コード</th>
      <th>銘柄</th>
      <th>製造元</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sakenote_sakes.each do |sakenote_sake| %>
      <tr>
        <td><%= sakenote_sake.sake_identify_code %></td>
        <td><%= sakenote_sake.sake_name %></td>
        <td><%= link_to sakenote_sake.maker_name, sakenote_sake.maker %></td>
        <td><%= link_to 'Show', sakenote_sake %></td>
        <td><%= link_to 'Edit', edit_sakenote_sake_path(sakenote_sake) %></td>
        <td><%= link_to 'Destroy', sakenote_sake, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @sakenote_sakes %>
<br>

<%= link_to 'New Sakenote Sake', new_sakenote_sake_path %>
